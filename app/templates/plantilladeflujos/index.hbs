<h1 class="page-header">
  {{#link-to "plantilladeflujos.new" tagName="a" class="pull-right" }}{{fa-icon "plus-circle" fixedWidth=true}}{{/link-to}}
  Plantilladeflujos
</h1>

{{#if model.length}}
  <div class="table-responsive">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>
            Nombre
          </th>
          <th>
            Actividades
          </th>
          <th colspan="3" class="text-center">
            {{fa-icon "bars" fixedWidth=true}}
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |plantilladeflujo|}}
          <tr>
            <td>
              {{plantilladeflujo.nombre}}
            </td>
            <td>
              {{plantilladeflujo.actividades}}
            </td>
            <td class="text-center">
              {{#link-to "plantilladeflujos.show" plantilladeflujo}}
                {{fa-icon "eye" fixedWidth=true}}
              {{/link-to}}
            </td>
            <td class="text-center">
              {{#link-to "plantilladeflujos.edit" plantilladeflujo}}
                {{fa-icon "pencil" fixedWidth=true}}
              {{/link-to}}
            </td>
            <td class="text-center">
              <a href="#" {{action "remove" plantilladeflujo}}>
                {{fa-icon "times" fixedWidth=true}}
              </a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{else}}
  <p id="blankslate">
    No Plantilladeflujos found
  </p>
{{/if}}
