<h1 class="page-header">
  {{#link-to "historials.new" tagName="a" class="pull-right" }}{{fa-icon "plus-circle" fixedWidth=true}}{{/link-to}}
  Historiales
</h1>

{{#if model.length}}
  <div class="table-responsive">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>
            Descripcion
          </th>
          <th>
            Fecha
          </th>
          <th colspan="3" class="text-center">
            {{fa-icon "bars" fixedWidth=true}}
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |historial|}}
          <tr>
            <td>
              {{historial.descripcion}}
            </td>
            <td>
              {{historial.fecha}}
            </td>
            <td class="text-center">
              {{#link-to "historials.show" historial}}
                {{fa-icon "eye" fixedWidth=true}}
              {{/link-to}}
            </td>
            <td class="text-center">
              {{#link-to "historials.edit" historial}}
                {{fa-icon "pencil" fixedWidth=true}}
              {{/link-to}}
            </td>
            <td class="text-center">
              <a href="#" {{action "remove" historial}}>
                {{fa-icon "times" fixedWidth=true}}
              </a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{else}}
  <p id="blankslate">
    No se encontraron datos.
  </p>
{{/if}}
