<h1 class="page-header">
  {{#link-to "actividads.new" tagName="a" class="pull-right" }}{{fa-icon "plus-circle" fixedWidth=true}}{{/link-to}}
  Actividades
</h1>

{{#if model.length}}
  <div class="table-responsive">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>
            Nombre
          </th>
          <th>
            Orden
          </th>
          <th>
            Flujo
          </th>
          <th colspan="3" class="text-center">
            {{fa-icon "bars" fixedWidth=true}}
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |actividad|}}
          <tr>
            <td>
              {{actividad.nombre}}
            </td>
            <td>
              {{actividad.orden}}
            </td>
            <td>
              {{actividad.flujo.nombre}}
            </td>
            <td class="text-center">
              {{#link-to "actividads.show" actividad}}
                {{fa-icon "eye" fixedWidth=true}}
              {{/link-to}}
            </td>
            <td class="text-center">
              {{#link-to "actividads.edit" actividad}}
                {{fa-icon "pencil" fixedWidth=true}}
              {{/link-to}}
            </td>
            <td class="text-center">
              <a href="#" {{action "remove" actividad}}>
                {{fa-icon "times" fixedWidth=true}}
              </a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{else}}
  <p id="blankslate">
    No Actividads found
  </p>
{{/if}}
