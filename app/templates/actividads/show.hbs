<h1 class="page-header">
  <span class="pull-right text-muted">{{fa-icon "eye" fixedWidth=true}}</span>
  {{#link-to "actividads.index" tagName="a" }}{{fa-icon "arrow-left" fixedWidth=true}}{{/link-to}}
  Actividad
</h1>

<div class="form-horizontal">
  
  <div class="form-group">
    <label class="control-label col-md-4">Nombre</label>
    <div class="col-md-8">
      <p class="form-control-static">
        {{model.nombre}}
      </p>
    </div>
  </div>
  
  <div class="form-group">
    <label class="control-label col-md-4">Orden</label>
    <div class="col-md-8">
      <p class="form-control-static">
        {{model.orden}}
      </p>
    </div>
  </div>
  
  <div class="form-group">
    <label class="control-label col-md-4">Flujo</label>
    <div class="col-md-8">
      <p class="form-control-static">
        {{model.flujo.nombre}}
      </p>
    </div>
  </div>
  
</div>
