<h1 class="page-header">
  {{#link-to "sprints.new" (query-params proyecto=proyecto) tagName="a" class="pull-right" }}{{fa-icon "plus-circle" fixedWidth=true}}{{/link-to}}
  {{#if proyecto}}
    {{#link-to "proyectos.show" proyecto tagName="a" }}{{fa-icon "arrow-left" fixedWidth=true}}{{/link-to}}
  {{/if}}
  Sprints
</h1>

{{#if model.length}}
  <div class="table-responsive">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>
            Proyecto
          </th>
          <th>
            Horashombre
          </th>
          <th>
            Estado
          </th>
          <th colspan="3" class="text-center">
            {{fa-icon "bars" fixedWidth=true}}
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |sprint|}}
          <tr>
            <td>
              {{sprint.proyecto.nombre}}
            </td>
            <td>
              {{sprint.horashombre}}
            </td>
            <td>
              {{sprint.estado}}
            </td>
            <td class="text-center">
              {{#link-to "sprints.show" sprint (query-params proyecto=proyecto)}}
                {{fa-icon "eye" fixedWidth=true}}
              {{/link-to}}
            </td>
            <td class="text-center">
              {{#link-to "sprints.edit" sprint (query-params proyecto=proyecto)}}
                {{fa-icon "pencil" fixedWidth=true}}
              {{/link-to}}
            </td>
            <td class="text-center">
              <a href="#" {{action "remove" sprint}}>
                {{fa-icon "times" fixedWidth=true}}
              </a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{else}}
  <p id="blankslate">
    No se encontraron datos.
  </p>
{{/if}}
