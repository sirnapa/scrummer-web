<h1 class="page-header">
  {{#link-to "rols.new" tagName="a" class="pull-right" }}{{fa-icon "plus-circle" fixedWidth=true}}{{/link-to}}
  Roles
</h1>

{{#if model.length}}
  <div class="table-responsive">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>
            Proyecto
          </th>
          <th>
            Nombre
          </th>
          <th>
            Asignado
          </th>
          <th>
            Permisosdelrol
          </th>
          <th colspan="3" class="text-center">
            {{fa-icon "bars" fixedWidth=true}}
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |rol|}}
          <tr>
            <td>
              {{rol.proyecto.nombre}}
            </td>
            <td>
              {{rol.nombre}}
            </td>
            <td>
              {{rol.asignado}}
            </td>
            <td>
              {{rol.permisosdelrol.permission.name}}
            </td>
            <td class="text-center">
              {{#link-to "rols.show" rol}}
                {{fa-icon "eye" fixedWidth=true}}
              {{/link-to}}
            </td>
            <td class="text-center">
              {{#link-to "rols.edit" rol}}
                {{fa-icon "pencil" fixedWidth=true}}
              {{/link-to}}
            </td>
            <td class="text-center">
              <a href="#" {{action "remove" rol}}>
                {{fa-icon "times" fixedWidth=true}}
              </a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{else}}
  <p id="blankslate">
    No se encontraron datos.
  </p>
{{/if}}
