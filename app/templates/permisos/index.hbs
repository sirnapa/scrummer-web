<h1 class="page-header">Permisos list</h1>

{{link-to "New Permiso" "permisos.new" tagName="button" class="btn btn-primary" }}

{{#if model.length}}
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>
            Nombre
          </th>
          <th colspan="3">
            Actions
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |permiso|}}
          <tr>
            <td>
              {{permiso.nombre}}
            </td>
            <td>
              {{link-to "Edit" "permisos.edit" permiso}}
            </td>
            <td>
              {{link-to "Show" "permisos.show" permiso}}
            </td>
            <td>
              <a href="#" {{action "remove" permiso}}>Remove</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{else}}
  <p id="blankslate">
    No Permisos found
  </p>
{{/if}}
